@model LightSurvey.Web.ViewModels.SliderImage.EditSliderImageViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit image's alt</h2>

@using (Html.BeginForm("Edit", "SliderImages", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.HiddenFor(model => model.Id)

            <div class="col-md-10">
                 <img style="max-height: 180px;" src="@Model.LocalPath" />
            </div>
            <div class="col-md-10">
                @Html.LabelFor(model => model.AltName)
                @Html.EditorFor(model => model.AltName, new { htmlAttributes = new { @class = "form-control", placeholder = @Model.AltName } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
            @Html.ActionLink("<-Go back", "Index")
        </div>
    </div>
}

