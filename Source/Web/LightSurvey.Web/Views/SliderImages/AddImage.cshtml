@using (Html.BeginForm("AddImage", "SliderImages", FormMethod.Post ,new {enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Add slider image (".jpeg, .jpg", ".bmp", ".gif", ".png")</h4>
        <hr />
        @if (TempData["UploadMessage"] != null)
        {
            <div>@TempData["UploadMessage"]</div>
        }
        <div class="form-group">
            <label class="control-label col-md-2" for="imageFile">Image</label>
            <div class="col-md-10">
                <input class="form-control" type="file" id="imageFile" name="imageFile" /><br />
            </div>
        </div>

        <div class="form-group">
            <div class="form-group">
                <label class="control-label col-md-2" for="AltName">AltName</label>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" id="AltName" name="AltName" type="text" value="">
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
