@model LightSurvey.Web.ViewModels.Questions.SRQuestionViewModel

@{
    ViewBag.Title = "SRQView";

    var ajaxOpt = new AjaxOptions
    {
        UpdateTargetId = "q-editor-container",
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "GET",
    };
}

<div>
    <div well>
        <div class="form-group v-align-center">
            <div class="col-md-1">
                <h4>@Model.Name.</h4>
            </div>
            <div class="col-md-11">
                <h4>@Html.DisplayFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })</h4>
            </div>
        </div>
        <hr />
        <div class="answers-container" style="font-size:16px">
            @foreach (var item in Model.Rows)
            {
                <div class="radio">
                    <label><input type="radio" name="optradio">@item</label>
                </div>
            }
        </div>
        <br />
    </div>

    <div class="form-group text-center">
        @Ajax.ActionLink("Edit Question", "SRQuestionEditPartial",
            new { surveyNumber = Model.SurveyNumber, questionName = Model.Name}, ajaxOpt, new { @class = "btn btn-lg btn-primary" })
    </div>
</div>